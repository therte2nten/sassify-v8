{
	"name": "@therteenten/sassify",
	"version": "7.0.0",
	"description": "Большой набор миксинов и функций на языке CSS-препроцессора Sass",
	"main": "index.scss",
	"scripts": {
		"test": "sass --watch test.scss:test.css",
		"sassdoc": "npx sassdoc . -d docs/"
	},
	"publishConfig": {
    "ignore": [
			".github/",
			".vscode/",
			"docs/",
			"node_modules/",
			".editorconfig",
			".gitignore",
			".npmrc",
			"CODE_OF_CONDUCT.md",
			"CODEOWNERS",
			"CONTRIBUTING.md"
    ]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/therteenten/sassify.git"
	},
	"keywords": [
		"sass",
		"scss",
		"sassify"
	],
	"author": "Haba Kudzaev <therteenten@inbox.ru>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/therteenten/sassify/issues"
	},
	"homepage": "https://github.com/therteenten/sassify#readme",
	"devDependencies": {
		"sass": "^1.60.0",
		"sassdoc": "^2.7.4"
	}
}
